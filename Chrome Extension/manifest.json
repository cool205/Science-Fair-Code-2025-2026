{
  "manifest_version": 3,
  "name": "Social Text Capture (placeholder)",
  "version": "0.1.0",
  "description": "Capture visible social posts/comment text from common sites and store them locally (placeholder).",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Social Text Capture"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
